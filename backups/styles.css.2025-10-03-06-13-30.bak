/* üöÄ ERICKRAPPORT - INTERFACE FUTURISTE CYBERPUNK üöÄ */
/* Inspir√© des interfaces gaming et logiciels NSA/CIA */

@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@300;400;500;600;700&display=swap');

/* üåå Variables CSS pour le th√®me cyberpunk */
:root {
    --neon-cyan: #00ffff;
    --neon-green: #39ff14;
    --neon-purple: #bf00ff;
    --neon-orange: #ff6600;
    --dark-bg: #0a0a0a;
    --darker-bg: #050505;
    --grid-color: #1a1a1a;
    --glass-bg: rgba(0, 255, 255, 0.05);
    --glass-border: rgba(0, 255, 255, 0.2);
    --danger-red: #ff0040;
    --warning-yellow: #ffff00;
    
    --glow-cyan: 0 0 20px var(--neon-cyan), 0 0 40px var(--neon-cyan), 0 0 60px var(--neon-cyan);
    --glow-green: 0 0 20px var(--neon-green), 0 0 40px var(--neon-green), 0 0 60px var(--neon-green);
    --glow-purple: 0 0 20px var(--neon-purple), 0 0 40px var(--neon-purple), 0 0 60px var(--neon-purple);
    --glow-orange: 0 0 20px var(--neon-orange), 0 0 40px var(--neon-orange), 0 0 60px var(--neon-orange);
}

/* üåê Fond futuriste avec grille hexagonale anim√©e */
body {
    font-family: 'Rajdhani', 'Orbitron', monospace;
    background: var(--dark-bg);
    background-image: 
        radial-gradient(circle at 25% 25%, var(--neon-cyan) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, var(--neon-purple) 0%, transparent 50%),
        linear-gradient(45deg, transparent 40%, rgba(0, 255, 255, 0.03) 50%, transparent 60%),
        repeating-linear-gradient(
            90deg,
            transparent,
            transparent 98px,
            rgba(0, 255, 255, 0.1) 100px
        ),
        repeating-linear-gradient(
            0deg,
            transparent,
            transparent 98px,
            rgba(0, 255, 255, 0.1) 100px
        );
    background-size: 100% 100%, 100% 100%, 50px 50px, 100px 100px, 100px 100px;
    background-attachment: fixed;
    color: var(--neon-cyan);
    min-height: 100vh;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
    animation: backgroundPulse 10s ease-in-out infinite;
}

/* Animation du fond */
@keyframes backgroundPulse {
    0%, 100% { filter: brightness(1) contrast(1); }
    50% { filter: brightness(1.1) contrast(1.2); }
}

/* üîÆ Effet de particules flottantes */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(2px 2px at 20px 30px, var(--neon-cyan), transparent),
        radial-gradient(2px 2px at 40px 70px, var(--neon-green), transparent),
        radial-gradient(1px 1px at 90px 40px, var(--neon-purple), transparent),
        radial-gradient(1px 1px at 130px 80px, var(--neon-orange), transparent);
    background-repeat: repeat;
    background-size: 200px 100px;
    animation: particleFloat 20s linear infinite;
    pointer-events: none;
    z-index: -1;
    opacity: 0.3;
}

@keyframes particleFloat {
    0% { transform: translateY(0px) translateX(0px); }
    33% { transform: translateY(-100px) translateX(100px); }
    66% { transform: translateY(-200px) translateX(-100px); }
    100% { transform: translateY(-300px) translateX(200px); }
}

/* üèóÔ∏è Conteneur principal futuriste */
.main-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    min-height: 100vh;
    padding: 20px;
    gap: 20px;
    position: relative;
}

/* üéÆ Sidebar style gaming */
.sidebar {
    width: 280px;
    flex-shrink: 0;
    background: linear-gradient(145deg, var(--glass-bg), rgba(0, 255, 255, 0.02));
    border: 2px solid var(--glass-border);
    border-radius: 15px;
    padding: 20px;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 
        inset 0 1px 0 rgba(255, 255, 255, 0.1),
        0 0 30px rgba(0, 255, 255, 0.2),
        0 10px 30px rgba(0, 0, 0, 0.3);
    position: relative;
    transition: all 0.3s ease;
}

.sidebar::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, var(--neon-cyan), var(--neon-purple), var(--neon-green), var(--neon-orange));
    border-radius: 15px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.sidebar:hover::before {
    opacity: 0.7;
    animation: borderGlow 2s ease-in-out infinite;
}

@keyframes borderGlow {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
}

/* üñ•Ô∏è Zone de contenu style NSA */
.content-area {
    flex: 1;
    background: linear-gradient(145deg, var(--glass-bg), rgba(0, 255, 255, 0.02));
    border: 2px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    min-height: 500px;
    box-shadow: 
        inset 0 1px 0 rgba(255, 255, 255, 0.1),
        0 0 30px rgba(0, 255, 255, 0.1),
        0 10px 30px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
}

.content-area::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.1), transparent);
    animation: scanLine 3s ease-in-out infinite;
}

@keyframes scanLine {
    0% { left: -100%; }
    100% { left: 100%; }
}

/* üéØ Boutons futuristes style gaming */
.button, .menu-btn, .btn-telecharger, .btn-fusionner, .btn-suivi-paiement {
    font-family: 'Orbitron', monospace;
    font-weight: 700;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 15px 25px;
    margin: 10px 0;
    background: linear-gradient(145deg, var(--darker-bg), var(--dark-bg));
    border: 2px solid var(--neon-cyan);
    border-radius: 8px;
    color: var(--neon-cyan);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 
        0 0 20px rgba(0, 255, 255, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.button::before, .menu-btn::before, .btn-telecharger::before, .btn-fusionner::before, .btn-suivi-paiement::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.4), transparent);
    transition: left 0.5s ease;
}

.button:hover, .menu-btn:hover, .btn-telecharger:hover, .btn-fusionner:hover:not(:disabled), .btn-suivi-paiement:hover {
    color: var(--dark-bg);
    background: var(--neon-cyan);
    box-shadow: var(--glow-cyan);
    transform: translateY(-2px);
    text-shadow: 0 0 10px var(--dark-bg);
}

.button:hover::before, .menu-btn:hover::before, .btn-telecharger:hover::before, .btn-fusionner:hover:not(:disabled)::before, .btn-suivi-paiement:hover::before {
    left: 100%;
}

/* üéÆ Bouton Fusionner sp√©cial */
.btn-fusionner {
    border-color: var(--neon-green);
    color: var(--neon-green);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.3);
}

.btn-fusionner:hover:not(:disabled) {
    background: var(--neon-green);
    box-shadow: var(--glow-green);
}

/* üî¥ Bouton d√©sactiv√© */
.btn-fusionner:disabled {
    border-color: var(--danger-red);
    color: var(--danger-red);
    background: var(--darker-bg);
    cursor: not-allowed;
    opacity: 0.5;
    box-shadow: 0 0 10px rgba(255, 0, 64, 0.2);
    animation: disabledPulse 2s ease-in-out infinite;
}

@keyframes disabledPulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.7; }
}

/* üéØ Bouton actif */
.menu-btn.active-btn {
    background: var(--neon-orange);
    color: var(--dark-bg);
    box-shadow: var(--glow-orange);
    border-color: var(--neon-orange);
}

/* üéÆ Animation d'activation */
.btn-fusionner.fusion-enabled {
    animation: buttonActivation 1s ease-in-out;
}

@keyframes buttonActivation {
    0% { 
        border-color: var(--danger-red);
        color: var(--danger-red);
        box-shadow: 0 0 10px rgba(255, 0, 64, 0.2);
    }
    50% { 
        border-color: var(--warning-yellow);
        color: var(--warning-yellow);
        box-shadow: 0 0 30px rgba(255, 255, 0, 0.5);
        transform: scale(1.05);
    }
    100% { 
        border-color: var(--neon-green);
        color: var(--neon-green);
        box-shadow: 0 0 20px rgba(57, 255, 20, 0.3);
    }
}

/* üìä Barre de progression cyberpunk */
.progress-container {
    width: 100%;
    height: 40px;
    background: var(--darker-bg);
    border: 2px solid var(--neon-cyan);
    border-radius: 20px;
    margin: 20px 0;
    position: relative;
    overflow: hidden;
    box-shadow: 
        inset 0 2px 10px rgba(0, 0, 0, 0.5),
        0 0 20px rgba(0, 255, 255, 0.3);
    opacity: 0;
    transition: opacity 0.5s ease;
}

.progress-bar {
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, var(--neon-cyan), var(--neon-green), var(--neon-purple));
    background-size: 300% 100%;
    border-radius: 18px;
    position: relative;
    transition: width 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    animation: progressFlow 2s ease-in-out infinite;
    box-shadow: 
        0 0 20px rgba(0, 255, 255, 0.6),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

@keyframes progressFlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

/* üîÆ Effet de scan sur la barre */
.progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
    animation: progressScan 1.5s ease-in-out infinite;
    border-radius: 18px;
}

@keyframes progressScan {
    0% { left: -100%; }
    100% { left: 100%; }
}

/* üí¨ Texte de progression futuriste */
#progress-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--dark-bg);
    font-family: 'Orbitron', monospace;
    font-weight: 700;
    font-size: 14px;
    text-shadow: 
        0 0 10px rgba(255, 255, 255, 0.8),
        0 0 20px rgba(0, 255, 255, 0.6);
    z-index: 10;
    margin: 0;
    white-space: nowrap;
    text-align: center;
    width: 100%;
    line-height: 1;
    letter-spacing: 1px;
    text-transform: uppercase;
}

/* üéØ Headers futuristes */
header {
    text-align: center;
    margin-bottom: 30px;
    position: relative;
}

header h1 {
    font-family: 'Orbitron', monospace;
    font-weight: 900;
    font-size: 2.5em;
    color: var(--neon-cyan);
    text-transform: uppercase;
    letter-spacing: 3px;
    margin: 10px 0;
    text-shadow: var(--glow-cyan);
    animation: titleGlow 3s ease-in-out infinite;
}

@keyframes titleGlow {
    0%, 100% { 
        text-shadow: var(--glow-cyan);
        transform: scale(1);
    }
    50% { 
        text-shadow: 
            0 0 30px var(--neon-cyan), 
            0 0 60px var(--neon-cyan), 
            0 0 90px var(--neon-cyan);
        transform: scale(1.02);
    }
}

/* üî• Footer cyberpunk */
.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: linear-gradient(145deg, var(--darker-bg), var(--dark-bg));
    border-top: 2px solid var(--neon-cyan);
    padding: 15px 0;
    text-align: center;
    font-family: 'Rajdhani', monospace;
    color: var(--neon-cyan);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.footer p {
    margin: 5px 0;
    font-size: 14px;
    text-shadow: 0 0 10px var(--neon-cyan);
}

/* üîó Liens sociaux futuristes */
.social-icon {
    color: var(--neon-cyan);
    text-decoration: none;
    font-weight: 600;
    margin: 0 15px;
    padding: 8px 15px;
    border: 1px solid var(--neon-cyan);
    border-radius: 5px;
    transition: all 0.3s ease;
    display: inline-block;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.social-icon:hover {
    background: var(--neon-cyan);
    color: var(--dark-bg);
    box-shadow: 0 0 20px var(--neon-cyan);
    transform: translateY(-2px);
}

/* üö® Alertes style NSA */
#custom-alert {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10000;
    background: linear-gradient(145deg, var(--darker-bg), var(--dark-bg));
    border: 2px solid var(--neon-green);
    border-radius: 15px;
    padding: 30px;
    box-shadow: 
        0 0 50px rgba(57, 255, 20, 0.5),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    text-align: center;
    min-width: 400px;
    backdrop-filter: blur(20px);
    animation: alertAppear 0.5s ease-out;
}

@keyframes alertAppear {
    0% {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.8);
    }
    100% {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
}

.alert-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
}

.checkmark {
    font-size: 40px;
    color: var(--neon-green);
    text-shadow: var(--glow-green);
    animation: checkmarkPulse 2s ease-in-out infinite;
}

@keyframes checkmarkPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

.alert-content p {
    color: var(--neon-cyan);
    font-family: 'Rajdhani', monospace;
    font-size: 16px;
    margin: 0;
    line-height: 1.5;
}

.alert-content button {
    font-family: 'Orbitron', monospace;
    font-weight: 700;
    padding: 12px 25px;
    background: var(--darker-bg);
    border: 2px solid var(--neon-green);
    border-radius: 8px;
    color: var(--neon-green);
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.alert-content button:hover {
    background: var(--neon-green);
    color: var(--dark-bg);
    box-shadow: var(--glow-green);
}

/* üì± Responsive futuriste */
@media screen and (max-width: 768px) {
    .main-container {
        flex-direction: column;
        padding: 10px;
    }
    
    .sidebar {
        width: 100%;
        margin-bottom: 20px;
    }
    
    header h1 {
        font-size: 1.8em;
    }
    
    .progress-container {
        height: 35px;
    }
    
    #progress-text {
        font-size: 12px;
    }
}

/* üéÆ Animations d'entr√©e */
.body-index {
    animation: pageLoad 1s ease-out;
}

@keyframes pageLoad {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* üîÆ Effet de survol sur les conteneurs */
.container {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 15px;
    padding: 30px;
    margin: 20px 0;
    backdrop-filter: blur(20px);
    box-shadow: 
        inset 0 1px 0 rgba(255, 255, 255, 0.1),
        0 0 30px rgba(0, 255, 255, 0.1);
    transition: all 0.3s ease;
}

.container:hover {
    border-color: var(--neon-cyan);
    box-shadow: 
        inset 0 1px 0 rgba(255, 255, 255, 0.2),
        0 0 40px rgba(0, 255, 255, 0.3);
}

/* üìù Formulaires futuristes */
input[type="file"], label {
    font-family: 'Rajdhani', monospace;
    color: var(--neon-cyan);
    font-size: 16px;
}

input[type="file"] {
    background: var(--darker-bg);
    border: 2px solid var(--neon-cyan);
    border-radius: 8px;
    padding: 10px;
    color: var(--neon-cyan);
    width: 100%;
    margin: 10px 0;
}

input[type="file"]:focus {
    outline: none;
    box-shadow: var(--glow-cyan);
}

/* üéØ Indicateur de chargement */
.loading-spinner {
    color: var(--neon-cyan);
    font-family: 'Orbitron', monospace;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    animation: loadingPulse 1.5s ease-in-out infinite;
}

@keyframes loadingPulse {
    0%, 100% { 
        opacity: 0.5;
        transform: scale(1);
    }
    50% { 
        opacity: 1;
        transform: scale(1.05);
    }
}

/* üåü Effets sp√©ciaux pour les √©l√©ments actifs */
.success-icon, .echec-icon {
    animation: iconGlow 1s ease-in-out infinite;
}

@keyframes iconGlow {
    0%, 100% { 
        filter: brightness(1);
        transform: scale(1);
    }
    50% { 
        filter: brightness(1.5);
        transform: scale(1.1);
    }
}

/* üéÆ Style pour les √©l√©ments de navigation */
hr {
    border: none;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--neon-cyan), transparent);
    margin: 30px 0;
    animation: hrGlow 3s ease-in-out infinite;
}

@keyframes hrGlow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
}

/* üî• Effet de matrix sur le fond */
body.body-import::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        linear-gradient(0deg, transparent 24%, rgba(0, 255, 255, 0.05) 25%, rgba(0, 255, 255, 0.05) 26%, transparent 27%, transparent 74%, rgba(0, 255, 255, 0.05) 75%, rgba(0, 255, 255, 0.05) 76%, transparent 77%, transparent),
        linear-gradient(90deg, transparent 24%, rgba(0, 255, 255, 0.05) 25%, rgba(0, 255, 255, 0.05) 26%, transparent 27%, transparent 74%, rgba(0, 255, 255, 0.05) 75%, rgba(0, 255, 255, 0.05) 76%, transparent 77%, transparent);
    background-size: 50px 50px;
    pointer-events: none;
    z-index: -2;
    animation: matrixMove 20s linear infinite;
}

@keyframes matrixMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
}